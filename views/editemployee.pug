doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title form
  link(rel="stylesheet", href="style.css") 
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9' crossorigin='anonymous')
form(name="employeeform" method="POST" action="/api/employee/edit?id="+employee._id)
  .mb-3
    label.form-label(for='firstname') first name
    input#firstname.form-control(type='text' name='firstName' value=employee.firstName aria-describedby='emailHelp')
  .mb-3
    label.form-label(for='lastname') last name
    input#lastname.form-control(type='text' name='lastName' value=employee.lastName aria-describedby='emailHelp')
    .mb-3
    label.form-label(for='age') age
    input#age.form-control(type='text' name='age' value=employee.age aria-describedby='emailHelp')
  .mb-3
    label.form-label(for='email') Email 
    input#email.form-control(type='text' name='email' value=employee.email aria-describedby='emailHelp')
    #emailHelp.form-text We&apos;ll never share your email with anyone else.
    label.form-check-label(for='exampleCheck1') Check me out
  .mb-3
    label.form-label(for='telephone') telephone
    input#telephone.form-control(type='text' name='telephone' value=employee.telephone aria-describedby='emailHelp')
    .mb-3
    label.form-label(for='gender') Gender
    input#gender.form-control(type='text' name='gender' value=employee.gender aria-describedby='emailHelp')
  button.btn.btn-primary(type='submit') Submit
