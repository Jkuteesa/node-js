doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title form
  link(rel="stylesheet", href="style.css") 
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9' crossorigin='anonymous')
form(name="employeeform" method="POST" action="/api/register" style="padding-left:60px;")
    .mb-3
        label.form-label(for='firstname') first name
        input#firstname.form-control(type='text' name='firstname' aria-describedby='emailHelp')
    .mb-3
        label.form-label(for='lastname') last name
        input#lastname.form-control(type='text' name='lastname' aria-describedby='emailHelp')
    .mb-3
        label.form-label(for='username') username
        input#username.form-control(type='text' name='username' aria-describedby='emailHelp')
    .mb-3
        label.form-label(for='email') Email 
        input#email.form-control(type='text' name='email' aria-describedby='emailHelp')
        #emailHelp.form-text We&apos;ll never share your email with anyone else.
    label.form-check-label(for='exampleCheck1') Check me out
    .mb-3
        label.form-label(for='telephone') telephone
        input#telephone.form-control(type='text' name='telephone' aria-describedby='emailHelp')
    .mb-3
    label.form-label(for='rolename') Role  
        select(name='rolename') 
            option(value='') select role
            option(value='director') Director
            option(value='manager') Manager 
            option(value='salesagent') Sales agent
    .mb-3
    label.form-label(for='branchname') Branch
        select(name='branchname') 
            option(value='') select branch
            option(value='kampala') Kampala
            option(value='jinja') Jinja  
            option(value='gulu') Gulu
    .mb-3
        label.form-label(for='password') password
        input#password.form-control(type='password' name='password' aria-describedby='emailHelp')
    button.btn.btn-primary(type='submit') Submit

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  